    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fourth.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_song"
        android:name="com.example.fourth.ui.song.SongFragment"
        android:label="@string/title_song"
        tools:layout="@layout/fragment_song" />

    <fragment
        android:id="@+id/navigation_albums"
        android:name="com.example.fourth.ui.albums.AlbumsFragment"
        android:label="@string/title_albums"
        tools:layout="@layout/fragment_albums" />
    <fragment
